# New Legion modules layout

proc ModulesHelp { } {
    puts stderr "Adds the cancer it suite to your environment."
    puts stderr ""
    puts stderr "https://github.com/cancerit"
    puts stderr ""
    puts stderr "Directory: /shared/ucl/apps/cancerit/"
}

module-whatis "Adds the cancer it suite to your environment."

# Location:

set prefix /shared/ucl/apps/cancerit

prereq gcc-libs
prereq r/recommended
prereq htslib/1.3.1 
prereq perl/5.22.0
prereq curl/7.47.1/gnu-4.9.2
prereq fasta/36.3.8d/gnu-4.9.2
prereq bedtools/2.25.0
prereq exonerate/2.2.0
prereq velvet/1.2.10
prereq python2/recommended
prereq boost/1_54_0/gnu-4.9.2


# For PCAP-core:
prepend-path PATH		$prefix/PCAP-core/bin
prepend-path CPATH              $prefix/PCAP-core/include
prepend-path INCLUDE_PATH       $prefix/PCAP-core/include
prepend-path LD_LIBRARY_PATH	$prefix/PCAP-core/lib
prepend-path LIBRARY_PATH	$prefix/PCAP-core/lib
append-path  PERL5LIB		$prefix/PCAP-core/lib/perl5
prepend-path MANPATH		$prefix/PCAP-core/man:$prefix/PCAP-core/share/man

# For cgpVcf:
prepend-path PATH		$prefix/cgpVcf/bin
prepend-path CPATH              $prefix/cgpVcf/include
