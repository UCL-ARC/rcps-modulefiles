# New Legion modules layout

proc ModulesHelp { } {
    puts stderr "Adds CMG Reservoir Simulation Software Version 2019.101 to your"
    puts stderr "environment."
    puts ""
    puts stderr "CMG provides reservoir simulation software, including thermal,"
    puts stderr "compositional, black oil and enhanced oil recovery processes"
    puts stderr "using easy-to-use model building workflows, and multi-physics"
    puts stderr "e.g. thermal effects, geochemistry, geomechanics, fluid and"
    puts stderr "phase behavior, wellbore hydraulics and completions."
    puts stderr ""
    puts stderr "Directory: /shared/ucl/apps/CMG/2019.101.GU/"
}

module-whatis "Adds CMG Reservoir Simulation Software Version 2019.101 to your environment."

# Location of CMG:

set prefix /shared/ucl/apps/CMG/2019.101.GU

prereq gcc-libs
conflict cmg

setenv CMG_HOME $prefix
prepend-path PATH		$prefix
prepend-path PATH               $prefix/br/2019.10/linux_x64/exe
prepend-path PATH		$prefix/imex/2019.10/linux_x64/exe
prepend-path LD_LIBRARY_PATH    $prefix/imex/2019.10/linux_x64/lib
prepend-path PATH		$prefix/gem/2019.10/linux_x64/exe
prepend-path LD_LIBRARY_PATH    $prefix/gem/2019.10/linux_x64/lib
prepend-path PATH		$prefix/stars/2019.10/linux_x64/exe
prepend-path LD_LIBRARY_PATH    $prefix/stars/2019.10/linux_x64/lib
prepend-path PATH               $prefix/Launcher/2019.10/Linux_x64/EXE
setenv CMG_LIC_HOST lic-cmg.ucl.ac.uk:2700
