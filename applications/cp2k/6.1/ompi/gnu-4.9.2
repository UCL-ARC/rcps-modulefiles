#%Module -*- tcl -*-
##

proc ModulesHelp { } {

  puts stderr {OpenMPI 3.1.4/GNU 4.9.2 build of CP2K with libint, libsmm, libxc.}.

}

module-whatis {Adds CP2K to your environment.}

prereq gcc-libs
prereq mpi/openmpi/3.1.4/gnu-4.9.2
prereq openblas/0.3.7-openmp/gnu-4.9.2

conflict cp2k

set              prefix               /shared/ucl/apps/cp2k/6.1/gnu-4.9.2/cp2k-6.1


prepend-path        CMAKE_PREFIX_PATH    $prefix

if { [file isdirectory $prefix/bin] } then {
  prepend-path      PATH                 $prefix/bin
}

if { [file isdirectory $prefix/man] } then {
  prepend-path      MANPATH              $prefix/man
}

if { [file isdirectory $prefix/share/man] } then {
  prepend-path      MANPATH              $prefix/share/man
}

if { [file isdirectory $prefix/lib] } then {
  prepend-path      LIBRARY_PATH         $prefix/lib
  prepend-path      LD_LIBRARY_PATH      $prefix/lib
}

if { [file isdirectory $prefix/lib64] } then {
  prepend-path      LIBRARY_PATH         $prefix/lib64
  prepend-path      LD_LIBRARY_PATH      $prefix/lib64
}

if { [file isdirectory $prefix/lib/pkgconfig] } then {
  prepend-path      PKG_CONFIG_PATH      $prefix/lib/pkgconfig
}

if { [file isdirectory $prefix/include] } then {
  prepend-path      CPATH                $prefix/include
  prepend-path      INCLUDE_PATH         $prefix/include
}

prepend-path LD_LIBRARY_PATH $prefix/tools/toolchain/install/lapack-3.8.0/lib
prepend-path LIBRARY_PATH $prefix/tools/toolchain/install/lapack-3.8.0/lib
prepend-path LD_RUN_PATH $prefix/tools/toolchain/install/lapack-3.8.0/lib

prepend-path LD_LIBRARY_PATH $prefix/tools/toolchain/install/fftw-3.3.7/lib
prepend-path LIBRARY_PATH $prefix/tools/toolchain/install/fftw-3.3.7/lib
prepend-path LD_RUN_PATH $prefix/tools/toolchain/install/fftw-3.3.7/lib
prepend-path CPATH $prefix/tools/toolchain/install/fftw-3.3.7/include

prepend-path LD_LIBRARY_PATH $prefix/tools/toolchain/install/libint-1.1.6/lib
prepend-path LIBRARY_PATH $prefix/tools/toolchain/install/libint-1.1.6/lib
prepend-path LD_RUN_PATH $prefix/tools/toolchain/install/libint-1.1.6/lib
prepend-path CPATH $prefix/tools/toolchain/install/libint-1.1.6/include

prepend-path LD_LIBRARY_PATH $prefix/tools/toolchain/install/libxc-4.0.3/lib
prepend-path LIBRARY_PATH $prefix/tools/toolchain/install/libxc-4.0.3/lib
prepend-path LD_RUN_PATH $prefix/tools/toolchain/install/libxc-4.0.3/lib
prepend-path CPATH $prefix/tools/toolchain/install/libxc-4.0.3/include

prepend-path LD_LIBRARY_PATH $prefix/tools/toolchain/install/scalapack-2.0.2/lib
prepend-path LIBRARY_PATH $prefix/tools/toolchain/install/scalapack-2.0.2/lib
prepend-path LD_RUN_PATH $prefix/tools/toolchain/install/scalapack-2.0.2/lib

setenv CP2K_DATA_DIR $prefix/data

