#%Module -*- tcl -*-
#
# OpenCV 2.4.13
#
#                                                      

proc ModulesHelp { } {

    puts stderr "This module adds the OpenCV 3.4.1 package to your environment."
    puts stderr "Open Source Computer Vision Library."
    puts stderr ""

}

module-whatis "Adds OpenCV 3.4.1 to your environment. Open Source Computer Vision Library."

prereq gcc-libs
prereq python3/recommended

conflict opencv

set root                        /shared/ucl/apps/opencv/3.4.1/gnu-4.9.2/python-3
prepend-path PATH               $root/bin
prepend-path LD_LIBRARY_PATH    $root/lib
prepend-path LIBRARY_PATH       $root/lib
prepend-path LD_LIBRARY_PATH    $root/lib64
prepend-path LIBRARY_PATH       $root/lib64
prepend-path CPATH              $root/include
prepend-path INCLUDE_PATH       $root/include
prepend-path PKG_CONFIG_PATH    $root/lib/pkgconfig
prepend-path CMAKE_PREFIX_PATH	$root
prepend-path PYTHONPATH		$root/lib/python3.6/site-packages

