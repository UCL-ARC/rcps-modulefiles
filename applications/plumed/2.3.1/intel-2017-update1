#%Module -*- tcl -*-
#
# PLUMED 2.3.1
#

proc ModulesHelp { } {

    puts stderr "This module adds the PLUMED 2.3.1 package to your environment."
    puts stderr ""
}

module-whatis "Adds PLUMED 2.3.1 to your environment, built using OpenBLAS and libmatheval"

# Add binary to PATH
prereq gcc-libs
prereq compilers/intel
prereq mpi/intel
prereq openblas/0.2.14/intel-2015-update2
prereq flex/2.5.39
prereq libmatheval/1.1.11

conflict plumed

set root                        /shared/ucl/apps/plumed/2.3.1/intel-2017/openblas
prepend-path PATH               $root/bin/
prepend-path LD_LIBRARY_PATH    $root/lib
prepend-path LIBRARY_PATH       $root/lib
prepend-path CPATH              $root/include
prepend-path INCLUDE		$root/include

setenv PLUMED_KERNEL          	$root/lib/libplumedKernel.so
