proc ModulesHelp { } {

  puts stderr "Adds Portland Group compilers V2015.7 to your environment."
  puts stderr ""
  puts stderr "Primarily provided for building Gaussian 09."
}

module-whatis "adds Portland Group compilers to your environment."

conflict compilers
prereq gcc-libs

set             prefix          /shared/ucl/apps/PGI/2015.7
set		target		linux86-64
set		release		15.7

prepend-path	PATH		$prefix/$target/$release/bin
prepend-path	MANPATH		$prefix/$target/$release/man
append-path	LM_LICENSE_FILE	27000@lic-pgi.ucl.ac.uk

setenv          PGI         	$prefix
setenv          CC              pgcc
setenv          CXX             pgCC
setenv          FC              pgf95
setenv          F90             pgf90
setenv          F77             pgf77
setenv          CXXCPP          "pgCC -E"
setenv          COMPILER_TAG    pgi-2015.7
