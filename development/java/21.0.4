proc ModulesHelp { } {
  puts stderr "\tAdds Oracle JDK 21.0.4 compilers to your environment variables,"
}

module-whatis "adds Oracle JDK 21.0.4 compilers to your environment variables"

conflict java
prereq gcc-libs

set              root              /shared/ucl/apps/java/jdk-21.0.4

prepend-path     PATH              $root/bin
append-path      MANPATH           $root/man

prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib

prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include

setenv           JAVA_HOME         $root

prepend-path CMAKE_PREFIX_PATH $root
