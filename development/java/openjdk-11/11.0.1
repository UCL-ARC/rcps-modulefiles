#%Module -*- tcl -*-
##
## modulefile
##

proc ModulesHelp { } {
  puts stderr "\tAdds OpenJDK 11.0.1 compilers to your environment variables,"
}

module-whatis "adds Oracle JDK 11.0.1 compilers to your environment variables"

conflict java
prereq gcc-libs

set              root              /shared/ucl/apps/openjdk/11.0.1/jdk-11.0.1

prepend-path     PATH              $root/bin
append-path      MANPATH           $root/man

prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib

prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include

setenv           JAVA_HOME         $root

prepend-path CMAKE_PREFIX_PATH $root
