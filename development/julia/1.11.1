#%Module -*- tcl -*-
##
## modulefile
##
## 

proc ModulesHelp { } {

  puts stderr "\tAdds Julia 1.11.1 to your environment variables"
}

module-whatis "adds Julia 1.11.1 to your environment variables"

conflict julia

set              root              /shared/ucl/apps/julia/1.11.1/julia-1.11.1

prepend-path     PATH              $root/bin

append-path      MANPATH           $root/share/man

prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib
prepend-path     LIBRARY_PATH      $root/lib

prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include

prepend-path CMAKE_PREFIX_PATH $root

# Fix for CA regression in Julia 1.10.1
setenv JULIA_SSL_CA_ROOTS_PATH /etc/ssl/certs/ca-bundle.crt
