#%Module -*- tcl -*-
##
## modulefile
##
## 

proc ModulesHelp { } {

  puts stderr "\tAdds Julia 1.6.2 to your environment variables"
}

module-whatis "adds Julia 1.6.2 to your environment variables"

conflict julia
prereq beta-modules
prereq gcc-libs/10.2.0

set              root              /shared/ucl/apps/julia/1.6.2/julia-1.6.2

prepend-path     PATH              $root/bin
append-path      MANPATH           $root/share/man

prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib
prepend-path     LIBRARY_PATH      $root/lib

prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include

prepend-path CMAKE_PREFIX_PATH $root
