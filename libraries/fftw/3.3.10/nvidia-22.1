#%Module -*- tcl -*-
##

proc ModulesHelp { } {

  puts stderr {Adds fftw 3.3.10 to your environment, build for the 22.1 Nvidia compilers.}

}

module-whatis {Adds fftw 3.3.10 to your environment.}

prereq gcc-libs/4.9.2
prereq compilers/nvidia/hpc-sdk/22.1

conflict fftw

set              prefix               /shared/ucl/apps/fftw/3.3.10/nvidia-2022-22.1

setenv FFTWLIBDIR $prefix/lib
setenv FFTWINCLUDE $prefix/include
setenv FFTWLIB fftw

prepend-path        CMAKE_PREFIX_PATH    $prefix

if { [file isdirectory $prefix/bin] } then {
  prepend-path      PATH                 $prefix/bin
}

if { [file isdirectory $prefix/man] } then {
  prepend-path      MANPATH              $prefix/man
}

if { [file isdirectory $prefix/share/man] } then {
  prepend-path      MANPATH              $prefix/share/man
}

if { [file isdirectory $prefix/lib] } then {
  prepend-path      LIBRARY_PATH         $prefix/lib
  prepend-path      LD_LIBRARY_PATH      $prefix/lib
}

if { [file isdirectory $prefix/lib64] } then {
  prepend-path      LIBRARY_PATH         $prefix/lib64
  prepend-path      LD_LIBRARY_PATH      $prefix/lib64
}

if { [file isdirectory $prefix/lib/pkgconfig] } then {
  prepend-path      PKG_CONFIG_PATH      $prefix/lib/pkgconfig
}

if { [file isdirectory $prefix/include] } then {
  prepend-path      CPATH                $prefix/include
  prepend-path      INCLUDE_PATH         $prefix/include
}

