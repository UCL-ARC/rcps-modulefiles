#%Module -*- tcl -*-
##

proc ModulesHelp { } {

  puts stderr {Adds openmpi 3.1.4 to your environment. The Open MPI Project is an open source Message Passing Interface implementation.}

}

module-whatis {Adds openmpi 3.1.4 to your environment. The Open MPI Project is an open source Message Passing Interface implementation.}

prereq gcc-libs
prereq compilers/gnu/4.9.2

conflict mpi

set              prefix               /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2

setenv MPI_HOME /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2
setenv MPI_RUN /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2/bin/mpirun
setenv GERUN_LAUNCHER openmpi-sge
prepend-path PATH /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2/bin
prepend-path PATH /shared/ucl/apps/openmpi/ucl-wrapper-omp3+/bin
prepend-path LD_RUN_PATH /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2/lib
prepend-path LD_LIBRARY_PATH /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2/lib
prepend-path CPATH /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2/include
prepend-path INCLUDE_PATH /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2/include
prepend-path CMAKE_PREFIX_PATH /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2
prepend-path MANPATH /shared/ucl/apps/openmpi/3.1.4/gnu-4.9.2/share/man
