#%Module -*- tcl -*-
##
## modulefile
##
## NetCDF C++ bindings 4.2 compiled using Intel 2015

proc ModulesHelp { } {
    puts stderr "Adds NetCDF C++ bindings Version 4.2 compiled using Intel 2015"
    puts stderr "to your environment."
    puts stderr ""
    puts stderr "NetCDF is a set of software libraries and self-describing,"
    puts stderr "machine-independent data formats that support the creation,"
    puts stderr "access, and sharing of array-oriented scientific data."
    puts stderr ""
    puts stderr "This version was compiled with Intel 2015 Update 2"
}

module-whatis "adds NetCDF C++ 4.2 for Intel 2015 to your environment."

conflict netcdf-c++
conflict netcdf-c++4
prereq gcc-libs
prereq compilers/intel
prereq hdf/5-1.8.15/intel-2015-update2
prereq netcdf/4.3.3.1/intel-2015-update2

set              root              /shared/ucl/apps/NetCDF-c++-legacy/4.2-intel-2015-update2

prepend-path     PATH              $root/bin
prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib
prepend-path        LIBRARY_PATH   $root/lib
prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include
prepend-path     MANPATH           $root/share/man

prepend-path CMAKE_PREFIX_PATH  $root
